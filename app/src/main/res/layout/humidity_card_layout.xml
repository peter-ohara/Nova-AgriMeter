<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/humidityImageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityTitle"
        app:layout_constraintTop_toTopOf="@+id/humidityImageView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/humidityImageView"
        android:layout_marginLeft="8dp"
        tools:textSize="24sp"
        tools:textColor="@color/cardview_light_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityCurrentDate"
        tools:text="10th January 2016"
        tools:textColor="@color/cardview_light_background"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/humidityCurrentTime"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/humidityTitle" />

    <TextView
        tools:text=" 2:26pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityCurrentTime"
        tools:textColor="@color/cardview_light_background"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/humidityImageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/humidityTitle" />

    <TextView
        tools:text="90%"
        android:textSize="36sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/currentHumidityValue"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/value_color" />

</android.support.constraint.ConstraintLayout>