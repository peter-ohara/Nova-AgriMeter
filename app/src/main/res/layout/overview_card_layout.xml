<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.AppCompat"
    android:layout_height="wrap_content">

    <TextView
        android:text="My Akropong Farm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overviewTitle"
        tools:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/cardview_light_background"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Not Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/overviewTitle"
        tools:text="My Kumasi Farm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastUpdatedTimeLabel"
        android:textColor="@color/cardview_light_background"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Last updated:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastUpdateTime"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lastUpdatedTimeLabel"
        android:layout_marginLeft="8dp"
        android:text="Not available"
        tools:text="10 minutes ago" />

</android.support.constraint.ConstraintLayout>