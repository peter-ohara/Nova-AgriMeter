<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.AppCompat">

    <TextView
        android:text="Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureTitle"
        tools:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/currentTemperatureValue"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureCurrentDate"
        tools:text="10th January 2016"
        android:textColor="@color/cardview_light_background"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/temperatureCurrentTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentTemperatureValue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitle"
        app:layout_constraintRight_toLeftOf="@+id/currentTemperatureValue"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        tools:text=" 2:26pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureCurrentTime"
        android:textColor="@color/cardview_light_background"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentTemperatureValue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        tools:text="90%"
        android:layout_width="wrap_content"
        android:id="@+id/currentTemperatureValue"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/cardview_light_background"
        android:textSize="70sp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>